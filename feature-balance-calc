function renderTable() {
    const tbody = document.getElementById('financeTable');
    tbody.innerHTML = '';

    incomes.forEach((item, i) => {
        const tr = document.createElement('tr');
        tr.innerHTML = <td>درآمد</td><td>${item.desc}</td><td>${item.amount}</td>
                        <td><button onclick="deleteItem('income', ${i})">حذف</button></td>;
        tbody.appendChild(tr);
    });

    expenses.forEach((item, i) => {
        const tr = document.createElement('tr');
        tr.innerHTML = <td>هزینه</td><td>${item.desc}</td><td>${item.amount}</td>
                        <td><button onclick="deleteItem('expense', ${i})">حذف</button></td>;
        tbody.appendChild(tr);
    });

    const totalIncome = incomes.reduce((a,b)=>a+b.amount, 0);
    const totalExpense = expenses.reduce((a,b)=>a+b.amount, 0);
    document.getElementById('totalIncome').innerText = totalIncome;
    document.getElementById('totalExpense').innerText = totalExpense;
    document.getElementById('balance').innerText = totalIncome - totalExpense;
}
